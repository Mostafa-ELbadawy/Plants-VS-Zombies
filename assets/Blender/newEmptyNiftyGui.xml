<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://nifty-gui.lessvoid.com/nifty-gui" xsi:schemaLocation="https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
    <useControls filename="nifty-default-controls.xml"/>
    <useStyles filename="nifty-default-styles.xml"/>
    <screen id="Screen" controller="jme3test.opencl.TestContextSwitching">
        <layer id="Layer0" childLayout="vertical">
            <control name="label" id="InfoLabel" padding="10px" text="Current device:\n Platform: \n Device: \n Profile: \n Memory: \n Compute Units: " height="30%"/>
            <panel id="" childLayout="horizontal" height="30%">
                <panel id="GPanel1" childLayout="vertical" width="50%">
                    <control name="label" id="" padding="10px" text="Select Platform"/>
                    <control name="listBox" id="PlatformListBox" horizontal="optional" padding="10px" selection="Single" vertical="optional" displayItems="4"/>
                </panel>
                <panel id="GPanel2" childLayout="vertical" width="50%">
                    <control name="label" id="GLabel2" padding="10px" text="Select Device"/>
                    <control name="listBox" id="DeviceListBox" horizontal="optional" padding="10px" selection="Single" vertical="optional" displayItems="4"/>
                </panel>
            </panel>
            <panel id="GPanel3" childLayout="center" height="30%">
                <control name="button" id="ApplyButton" padding="10px" valing="top" x="-1px" width="100px" y="-1px" label="Change Context" align="center" height="12px"/>
            </panel>
        </layer>
    </screen>
</nifty>
